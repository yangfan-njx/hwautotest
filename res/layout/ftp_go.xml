<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:orientation="vertical"
    android:rowCount="12"
    android:useDefaultMargins="true" 
    android:background="@drawable/bg2">

    <TextView
        android:layout_width="73dip"
        android:layout_height="62dip"
        android:layout_column="0"
        android:layout_gravity="top"
        android:layout_row="0" />

    <Button
        android:id="@+id/button_downloadType"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text="@string/testType_download" />

    <TextView
        android:layout_width="81dip"
        android:layout_height="30dip"
        android:layout_column="1"
        android:layout_gravity="top"
        android:layout_row="2" />

    <Button
        android:id="@+id/button_uploadType"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_column="1"
        android:layout_row="3"
        android:text="@string/testType_upload" />

    <!-- <Switch -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_column="0" -->
    <!-- android:layout_gravity="left|center_vertical" -->
    <!-- android:layout_row="5" -->
    <!-- android:textOff="默认" -->
    <!-- android:textOn="自定义" /> -->

    <TextView
        android:id="@+id/tip_ftpHost"
        android:layout_height="17dip"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_row="7"
        android:enabled="false"
        android:text="地址：" />

    <EditText
        android:id="@+id/ftpHost"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="7"
        android:ems="8"
        android:enabled="false"
        android:inputType="textUri"
        android:text="18.8.8.48"
        android:textSize="10sp"
        android:selectAllOnFocus="true" 
        android:focusable="false">

        
    </EditText>

    <TextView
        android:id="@+id/tip_ftpPort"
        android:layout_height="17dip"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_row="8"
        android:enabled="false"
        android:text="端口：" />

    <EditText
        android:id="@+id/ftpPort"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="8"
        android:ems="8"
        android:enabled="false"
        android:gravity="left"
        android:inputType="number"
        android:text="21"
        android:textSize="10sp" 
        android:selectAllOnFocus="true"
        android:focusable="false">
    </EditText>

    <TextView
        android:id="@+id/tip_ftpUser"
        android:layout_height="17dip"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_row="9"
        android:enabled="false"
        android:text="用户：" />

    <EditText
        android:id="@+id/ftpUser"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="9"
        android:ems="8"
        android:enabled="false"
        android:inputType="text"
        android:text="hwadmin"
        android:textSize="10sp" 
        android:selectAllOnFocus="true"
        android:focusable="false">
    </EditText>

    <TextView
        android:layout_width="64dip"
        android:layout_height="34dip"
        android:layout_column="0"
        android:layout_row="11" />

    <TextView
        android:layout_width="103dip"
        android:layout_height="54dip"
        android:layout_column="1"
        android:layout_gravity="right|center_vertical"
        android:layout_row="4" />

    <TextView
        android:id="@+id/tip_ftpPassward"
        android:layout_height="17dip"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_row="10"
        android:enabled="false"
        android:text="密码：" />

    <EditText
        android:id="@+id/ftpPassward"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="10"
        android:ems="8"
        android:enabled="false"
        android:inputType="textPassword"
        android:text="123456"
        android:textSize="10sp" 
        android:selectAllOnFocus="true"
        android:focusable="false"/>

    <ToggleButton
        android:id="@+id/toggleBtn_changeFTP"
        android:layout_height="32dip"
        android:layout_column="1"
        android:layout_gravity="right|center_vertical"
        android:layout_row="7"
        android:textOff="设置"
        android:textOn="保存" 
        />

</GridLayout>